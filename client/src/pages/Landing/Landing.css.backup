/* Tablet Schedule Grid */
.schedule-grid-tablet {
  border-radius: 20px;
  overflow: hidden;
  box-shadow: var(--shadow-lg);
  margin-top: 2rem;
  transition: background-color 0.3s ease;
}

[data-theme="light"] .schedule-grid-tablet {
  background: var(--landing-card-bg-light);
}

[data-theme="dark"] .schedule-grid-tablet {
  background: var(--landing-card-bg-dark);
  border: 1px solid var(--landing-border-dark);
}

.tablet-schedule-header {
  background: linear-gradient(135deg, var(--gb-red), var(--gb-red-dark));
  color: var(--gb-white);
  padding: 1.5rem 2rem;
  text-align: center;
}

.tablet-schedule-header h4 {
  margin: 0;
  font-size: 1.5rem;
  font-weight: 700;
}

.tablet-schedule-body {
  padding: 1.5rem;
}

.tablet-time-block {
  margin-bottom: 2rem;
