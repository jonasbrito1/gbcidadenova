  flex-direction: column;
  gap: 1rem;
}

.mobile-class-card {
  border-radius: 12px;
  padding: 1rem;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

[data-theme="light"] .mobile-class-card {
  background: var(--landing-card-bg-light);
  border: 1px solid rgba(0, 0, 0, 0.05);
}

[data-theme="dark"] .mobile-class-card {
  background: var(--landing-card-bg-dark);
  border: 1px solid var(--landing-border-dark);
}

.mobile-class-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4px;
}

.mobile-class-card.iniciante::before { background: var(--gb-blue); }
.mobile-class-card.infantil::before { background: var(--gb-orange); }
.mobile-class-card.todos::before { background: var(--gb-red); }
.mobile-class-card.livre::before { background: var(--gb-green); }

.mobile-class-card:hover {
  transform: translateX(8px);
