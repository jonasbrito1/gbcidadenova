}

.btn-whatsapp-mobile {
  background: linear-gradient(135deg, #25d366, #128c7e) !important;
  border: none !important;
  color: white !important;
  padding: 0.6rem !important;
  width: 40px;
  height: 40px;
  border-radius: 50% !important;
  text-decoration: none !important;
  transition: all 0.3s ease !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  box-shadow: 0 3px 10px rgba(37, 211, 102, 0.3) !important;
}

.btn-whatsapp-mobile:hover {
  background: linear-gradient(135deg, #128c7e, #075e54) !important;
  transform: translateY(-2px) scale(1.1) !important;
  color: white !important;
}

.btn-login-mobile {
  background: transparent !important;
  border: 2px solid var(--gb-red) !important;
  color: var(--gb-red) !important;
  padding: 0.6rem !important;
  width: 40px;
  height: 40px;
  border-radius: 50% !important;
  text-decoration: none !important;
  transition: all 0.3s ease !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.btn-login-mobile:hover {
  background: var(--gb-red) !important;
  color: var(--gb-white) !important;
  transform: translateY(-2px) scale(1.1) !important;
  border-color: var(--gb-red) !important;
}

.mobile-menu-toggle {
  border: 2px solid rgba(255, 255, 255, 0.3) !important;
  color: var(--gb-white) !important;
  padding: 0.6rem !important;
  width: 40px;
  height: 40px;
  border-radius: 8px !important;
  transition: all 0.3s ease !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.mobile-menu-toggle:hover {
  background: rgba(255, 255, 255, 0.1) !important;
  border-color: var(--gb-white) !important;
  transform: translateY(-1px) !important;
  color: var(--gb-white) !important;
}

/* Mobile Menu Offcanvas */
.mobile-menu-offcanvas {
  background: linear-gradient(135deg, var(--gb-black) 0%, var(--gb-red-dark) 100%) !important;
}

.mobile-menu-header {
