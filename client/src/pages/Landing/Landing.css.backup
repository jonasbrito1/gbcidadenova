/* Quote Section Styles */
.quote-section {
  position: relative;
  overflow: hidden;
}

.quote-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 1;
}

.quote-section .container {
  position: relative;
  z-index: 2;
}

.quote-section blockquote {
  position: relative;
  margin: 0;
  padding: 0;
}

.quote-section blockquote::before {
  content: '"';
  font-size: 4rem;
  color: var(--gb-red);
  position: absolute;
  top: -1rem;
  left: -2rem;
  font-family: Georgia, serif;
  line-height: 1;
}

.quote-section blockquote::after {
  content: '"';
  font-size: 4rem;
  color: var(--gb-red);
  position: absolute;
  bottom: -2rem;
  right: -2rem;
  font-family: Georgia, serif;
  line-height: 1;
}

.quote-section cite {
  display: block;
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* Plans Section Styles - Modernizado */
.plans-section {
  position: relative;
  overflow: hidden;
  transition: background-color 0.3s ease;
}

[data-theme="light"] .plans-section {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

[data-theme="dark"] .plans-section {
  background: linear-gradient(135deg, var(--landing-bg-dark) 0%, var(--landing-section-bg-dark) 100%);
}

.plans-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background:
    radial-gradient(circle at 20% 20%, rgba(220, 38, 38, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(44, 90, 160, 0.05) 0%, transparent 50%);
  pointer-events: none;
}

.plan-card {
  border: none;
  border-radius: 20px;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  position: relative;
  backdrop-filter: blur(10px);
  box-shadow:
    0 10px 30px rgba(0, 0, 0, 0.1),
    0 1px 8px rgba(0, 0, 0, 0.06);
}

[data-theme="light"] .plan-card {
  background: var(--landing-card-bg-light);
}

[data-theme="dark"] .plan-card {
  background: var(--landing-card-bg-dark);
  border: 1px solid var(--landing-border-dark);
}

.plan-card:hover {
  transform: translateY(-10px) scale(1.02);
  box-shadow:
    0 20px 40px rgba(0, 0, 0, 0.15),
    0 10px 20px rgba(220, 38, 38, 0.1);
}

.popular-plan {
  transform: scale(1.05);
  border: 2px solid var(--gb-red);
  box-shadow: var(--shadow-glow);
}

.popular-plan:hover {
  transform: translateY(-10px) scale(1.07);
  box-shadow:
    0 25px 50px rgba(0, 0, 0, 0.2),
    var(--shadow-glow);
}

.plan-badge {
  position: absolute;
  top: -1px;
  right: 20px;
  background: linear-gradient(135deg, var(--gb-red), var(--gb-red-dark));
  color: white;
  padding: 8px 20px;
  border-radius: 0 0 15px 15px;
  font-size: 0.85rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  box-shadow: 0 4px 10px rgba(220, 38, 38, 0.3);
  z-index: 2;
}

.plan-badge.popular {
  background: linear-gradient(135deg, var(--gb-gold), #ffb700);
  animation: pulse-gold 2s infinite;
  transition: color 0.3s ease;
}

[data-theme="light"] .plan-badge.popular {
  color: var(--landing-text-light);
}

[data-theme="dark"] .plan-badge.popular {
  color: var(--landing-text-dark);
}

.plan-badge.premium {
  background: linear-gradient(135deg, #6366f1, #4f46e5);
}

@keyframes pulse-gold {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.plan-name {
  font-weight: 800;
  margin-bottom: 1.5rem;
  font-size: 1.4rem;
  position: relative;
  transition: color 0.3s ease;
}

[data-theme="light"] .plan-name {
  color: var(--landing-text-light);
}

[data-theme="dark"] .plan-name {
  color: var(--landing-text-dark);
}

.plan-price {
  margin-bottom: 1rem;
  color: var(--gb-red);
  position: relative;
}

.plan-price .currency {
  font-size: 1.4rem;
  font-weight: 600;
  vertical-align: top;
  opacity: 0.8;
}

.plan-price .amount {
  font-size: 3.5rem;
  font-weight: 900;
  line-height: 1;
  background: linear-gradient(135deg, var(--gb-red), var(--gb-red-dark));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.plan-price .period {
  font-size: 1.1rem;
  font-weight: 600;
  display: block;
  margin-top: 0.5rem;
  transition: color 0.3s ease;
}

[data-theme="light"] .plan-price .period {
  color: var(--landing-text-secondary-light);
}

[data-theme="dark"] .plan-price .period {
  color: var(--landing-text-secondary-dark);
}

.plan-savings {
  margin-bottom: 2rem;
  text-align: center;
}

.plan-savings span {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  padding: 6px 12px;
  border-radius: 20px;
  font-weight: 600;
  font-size: 0.9rem;
  display: inline-block;
  margin-bottom: 0.5rem;
}

.plan-savings .discount {
  display: block;
  color: var(--gb-red);
  font-weight: 700;
  font-size: 0.85rem;
  animation: bounce-savings 2s infinite;
}

@keyframes bounce-savings {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-3px); }
  60% { transform: translateY(-2px); }
}

.plan-features {
  list-style: none;
  padding: 0;
  margin: 0 0 2rem 0;
  text-align: left;
}

.plan-features li {
  padding: 0.75rem 0;
  font-weight: 500;
  position: relative;
  padding-left: 2rem;
  transition: all 0.3s ease;
}

[data-theme="light"] .plan-features li {
  color: var(--landing-text-secondary-light);
}

[data-theme="dark"] .plan-features li {
  color: var(--landing-text-secondary-dark);
}

.plan-features li:hover {
  color: var(--gb-red);
  transform: translateX(5px);
}

.plan-features li::before {
  content: "●";
  color: var(--gb-red);
  font-weight: bold;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  font-size: 1.2rem;
  animation: pulse-dot 2s infinite ease-in-out;
}

@keyframes pulse-dot {
  0%, 100% { opacity: 1; transform: translateY(-50%) scale(1); }
  50% { opacity: 0.6; transform: translateY(-50%) scale(1.2); }
}

.plan-button {
  width: 100%;
  padding: 1rem 1.5rem;
  font-weight: 700;
  border-radius: 15px;
  border: 2px solid var(--gb-red);
  transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  position: relative;
  overflow: hidden;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-size: 0.9rem;
}

.plan-button::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: linear-gradient(135deg, var(--gb-red), var(--gb-red-dark));
  transition: all 0.3s ease;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  z-index: 0;
}

.plan-button:hover::before {
  width: 300px;
  height: 300px;
}

.plan-button:hover {
  color: white;
  transform: translateY(-3px);
  box-shadow: 0 10px 25px rgba(220, 38, 38, 0.4);
}

.plan-button i, .plan-button span {
  position: relative;
  z-index: 1;
}

.plan-card .btn-danger {
  background: linear-gradient(135deg, var(--gb-red), var(--gb-red-dark));
  border: 2px solid var(--gb-red);
  color: white;
}

.plan-card .btn-danger::before {
  background: linear-gradient(135deg, var(--gb-red-dark), #991b1b);
}

.plan-card .btn-danger:hover {
  box-shadow: var(--shadow-glow);
}

/* Payment Method Selector Styles */
.payment-method-selector {
  margin-bottom: 2rem;
}

.payment-method-selector h5 {
  font-weight: 700;
  margin-bottom: 1.5rem;
  transition: color 0.3s ease;
}

[data-theme="light"] .payment-method-selector h5 {
  color: var(--landing-text-light);
}

[data-theme="dark"] .payment-method-selector h5 {
  color: var(--landing-text-dark);
}

.payment-method-selector .btn-group {
  box-shadow: var(--shadow-md);
  border-radius: 15px;
  overflow: hidden;
}

.payment-method-selector .btn {
  border: none;
  padding: 1rem 2rem;
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.payment-method-selector .btn-outline-success {
  border-color: #10b981;
  color: #10b981;
}

.payment-method-selector .btn-outline-success:checked + .btn-outline-success,
.payment-method-selector .btn-outline-success.active {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  transform: scale(1.05);
  box-shadow: 0 5px 15px rgba(16, 185, 129, 0.4);
}

.payment-method-selector .btn-outline-primary {
  border-color: #3b82f6;
  color: #3b82f6;
}

.payment-method-selector .btn-outline-primary:checked + .btn-outline-primary,
.payment-method-selector .btn-outline-primary.active {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
  transform: scale(1.05);
  box-shadow: 0 5px 15px rgba(59, 130, 246, 0.4);
}

.payment-method-selector .btn:hover {
  transform: translateY(-2px);
}

.btn-check:checked + .btn {
  background: linear-gradient(135deg, var(--gb-red), var(--gb-red-dark));
  border-color: var(--gb-red);
  color: white;
  box-shadow: var(--shadow-lg);
}

