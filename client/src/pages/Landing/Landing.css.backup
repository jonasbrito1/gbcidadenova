  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
}

.tablet-class-item {
  width: 100%;
}

.tablet-class-card {
  border-radius: 12px;
  padding: 1rem;
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 0.75rem;
  min-height: 70px;
}

[data-theme="light"] .tablet-class-card {
