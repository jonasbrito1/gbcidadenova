}

.mobile-class-time {
  display: flex;
  align-items: center;
  font-size: 0.875rem;
  font-weight: 600;
  margin-bottom: 0.75rem;
  transition: color 0.3s ease;
}

[data-theme="light"] .mobile-class-time {
  color: var(--landing-text-secondary-light);
}

[data-theme="dark"] .mobile-class-time {
  color: var(--landing-text-secondary-dark);
}

.mobile-class-content {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.mobile-class-icon {
  font-size: 1.5rem;
  min-width: 40px;
  text-align: center;
}

.mobile-class-info {
  flex: 1;
}

.mobile-class-name {
  font-size: 1rem;
  font-weight: 700;
  line-height: 1.3;
  margin-bottom: 4px;
  transition: color 0.3s ease;
}

[data-theme="light"] .mobile-class-name {
  color: var(--landing-text-light);
}

[data-theme="dark"] .mobile-class-name {
  color: var(--landing-text-dark);
}

.mobile-class-level {
  font-size: 0.875rem;
  font-weight: 600;
  transition: color 0.3s ease;
}

[data-theme="light"] .mobile-class-level {
  color: var(--landing-text-secondary-light);
}

[data-theme="dark"] .mobile-class-level {
  color: var(--landing-text-secondary-dark);
}

/* Ultra Compact Desktop Schedule Styles */
.time-cell.compact,
.class-cell.compact {
  padding: 0.5rem 0.25rem;
}

.class-card.compact {
  padding: 0.5rem;
  min-height: 45px;
  border-radius: 8px;
}

.class-card.compact .class-icon {
  font-size: 1rem;
  margin-bottom: 0.25rem;
}

.class-card.compact .class-name {
