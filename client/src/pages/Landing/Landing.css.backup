}

/* Schedule CTA */
.schedule-cta {
  margin-top: 4rem;
  background: linear-gradient(135deg, var(--gb-red), var(--gb-red-dark));
  border-radius: 20px;
  padding: 3rem;
  text-align: center;
  color: var(--gb-white);
  position: relative;
  overflow: hidden;
