{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "🐳 Start Docker Containers",
      "type": "shell",
      "command": "docker-compose",
      "args": ["-f", "docker-compose.dev.yml", "up", "-d"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "🛑 Stop Docker Containers",
      "type": "shell",
      "command": "docker-compose",
      "args": ["-f", "docker-compose.dev.yml", "down"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always"
      }
    },
    {
      "label": "📊 Open Prisma Studio",
      "type": "shell",
      "command": "npm",
      "args": ["run", "db:studio"],
      "options": {
        "cwd": "${workspaceFolder}/apps/backend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    },
    {
      "label": "🔄 Reset Database",
      "type": "shell",
      "command": "npm",
      "args": ["run", "prisma:reset"],
      "options": {
        "cwd": "${workspaceFolder}/apps/backend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always"
      }
    },
    {
      "label": "🚀 Start Development",
      "dependsOrder": "sequence",
      "dependsOn": ["🐳 Start Docker Containers"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}